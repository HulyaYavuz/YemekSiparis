                        </div>
                    </div>
                    <div class="col-md-12 d-flex align-items-center">

                        <div class="tab-content ftco-animate" id="v-pills-tabContent">
                            <div class="tab-pane fade show active" id="v-pills-1" role="tabpanel" aria-labelledby="v-pills-1-tab">
                                <div class="row">
                                    @if (Model != null)
                                    {
                                        foreach (Product item in Model.Products)
                                        {

                                            if (item.Category.Title == "pizza")
                                            {
                                                <div class="col-md-4 text-center">
                                                    <div class="menu-wrap">
                                                        <a href="/Home/ShowProductItem/@item.Id"><img class=" menu-img img mb-4" src="~/images/@item.ProductImage" /></a>
                                                        <div class="text">
                                                            <h3><a href="#">@item.Name</a></h3>
                                                            <p>@item.Description</p>
                                                            <p class="price"><span>@item.Price ₺</span></p>

                                                            <p><a href="" class="addtobasket btn btn-white btn-outline-white" data-id="@item.Id">Sepete Ekle</a></p>

                                                        </div>
                                                    </div>
                                                </div>
                                            }
                                        }
                                    }
                                </div>
                            </div>

                            <div class="tab-pane fade" id="v-pills-2" role="tabpanel" aria-labelledby="v-pills-2-tab">
                                <div class="row">
                                    @if (Model != null)
                                    {
                                        foreach (var item in Model.Products)
                                        {
                                            if (item.Category.Title == "burger")
                                            {
                                                <div class="col-md-4 text-center">
                                                    <div class="menu-wrap">
