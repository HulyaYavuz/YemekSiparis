<script>
    $(document).ready(function myfunction() {
        $(".addtobasket").click(function myfunction() {
            var uid = $(this).attr("data-id");
            $.ajax({
                type: "GET",
                url: "/Sepet/AddBasket",
                data: { id: uid },
                success: function myfunction() {
                    $.ajax({
                        type: "GET",
                        url: "/Sepet/MiniSepet",
                        async: false,
                        success: function VeriGetir(veri) {
                            console.log("test");
                            $(".cart-all").html('');
                            $(".cart-all").html(veri);
                            window.location.reload();

                        }

                    })
                },
                error: function myfunction() {
                    alert("Hata : Ürün Sepete Eklenemedi.");
                }
            });
        });
    });
   
    $(document).ready(function () {
            var key = "769aa5b01a258e4d9ec6a5c1283e0268";

            $.ajax({
                url: "http://api.openweathermap.org/data/2.5/weather?q=Bursa",
                dataType: "json",
                type: "GET",
                data: { appid: key, units: "metric" },
                success: function (data) {
                    var yaz = "";
